@model IEnumerable<IntegrationModule.ResponseModels.GenreResponse>

@{
    ViewData["Title"] = "Genre List";
}

<h1>Genre Management</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Genre</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-danger delete">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No genres found.</td>
            </tr>
        }
    </tbody>
</table>

@section JS {
    <script>
        $(document).ready(function () {
            $(".btn-danger").click(function () {
                return confirm("Do you want to delete this genre?");
            });
        });
    </script>
}