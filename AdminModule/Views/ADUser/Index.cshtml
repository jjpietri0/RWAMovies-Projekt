@model IEnumerable<IntegrationModule.ResponseModels.UserResponse>
@{
    ViewData["Title"] = "List of users";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-secondary m-1">Create new User</a>

<form asp-controller="ADUser" asp-action="Index" method="get" class="p-2">
    <div class="form-check">
        <label for="usernameFilter" class="m-1">Username:</label>
        <input type="text" id="usernameFilter" name="usernameFilter" value="@Context.Request.Query["usernameFilter"]" class="form-control m-1" />

        <label for="firstnameFilter" class="m-1">Firstname:</label>
        <input type="text" id="firstnameFilter" name="firstnameFilter" value="@Context.Request.Query["firstnameFilter"]" class="form-control m-1" />

        <label for="lastnameFilter" class="m-1">Lastname:</label>
        <input type="text" id="lastnameFilter" name="lastnameFilter" value="@Context.Request.Query["lastnameFilter"]" class="form-control m-1" />

        <label for="contryFilter" class="m-1">Country:</label>
        <input type="text" id="contryFilter" name="contryFilter" value="@Context.Request.Query["countryFilter"]" class="form-control m-1" />

        <button type="submit" class="btn btn-primary m-1">Filter users</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>CountryID</th>
            <th>Phone</th>
            <th>Confirmed</th>
            <th>Created at</th>
            <th>Delete At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.CountryOfResidenceId</td>
                <td>@user.Phone</td>
                <td>@user.IsConfirmed</td>
                <td>@user.CreatedAt</td>
                <td>@user.DeletedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>