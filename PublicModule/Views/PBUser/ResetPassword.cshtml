@{
    ViewData["Title"] = "Reset password";
}


<div class="container-fluid w-50">
    <div class="row mt-4">
        <div class="offset-3 col">
            <h1>Reset password</h1>
            <div class="form-group">
                <label for="currentPassword">Current password:</label>
                <input type="password" class="form-control" id="currentPassword" placeholder="Enter current password">
            </div>
            <div class="form-group">
                <label for="newPassword">New password:</label>
                <input type="password" class="form-control" id="newPassword" placeholder="Enter new password">
            </div>
            <div class="offset-1 mt-2">
                <button type="submit" class="btn btn-primary" id="resetPassword">Reset password</button>
            </div>
        </div>
    </div>
</div>

@section JS {
    <script>
        $(document).ready(function () {

            var userId = sessionStorage.getItem("ResponseId");
            var username = sessionStorage.getItem("Username");

            $('#resetPassword').click(function () {

                var currentPassword = $('#currentPassword').val();
                var newPassword = $('#newPassword').val();

                $.ajax({
                    url: '@Url.Action("ResetPassword", "PBUser")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ 
                        id: userId,
                        Username: username,
                        currentPassword: currentPassword,
                        newPassword: newPassword
                    }),
                    success: function (response) {
                        if (response == "Success") {
                            alert("Password is successfully changed");
                            window.location.href = '@Url.Action("Index", "PBLogin")';
                        }
                        else {
                            alert("Password change failed!");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("An error occurred: " + error);
                    }
                });
            });
        });
    </script>
}

